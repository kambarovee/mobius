<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Top Section-->

        <RelativeLayout
            android:id="@+id/rl_topSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <RelativeLayout
                android:id="@+id/rl_appbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_effect"
                    android:contentDescription="@string/close_button"
                    android:padding="16sp"
                    android:src="@drawable/cross_icon" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/button_effect"
                    android:contentDescription="@string/exit_button"
                    android:padding="16sp"
                    android:src="@drawable/exit_icon" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/profile_image"
                    android:paddingTop="24dp"
                    android:src="@drawable/photography" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="24dp"
                    android:text="@string/user_name"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tab_profile" />


                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tab_settings" />

                </com.google.android.material.tabs.TabLayout>

            </LinearLayout>

        </RelativeLayout>

        <!--End of Top Section-->

        <!--Carousel-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FAFAFA">

            <LinearLayout
                android:id="@+id/ll_carouselText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingEnd="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carousel_topsection_title"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:text="@string/carousel_topsection_subtitle"
                    android:textSize="14sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_cards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/cardview_items" />


            </LinearLayout>
            <!--End of Carousel-->

            <!--List-->
            <LinearLayout
                android:id="@+id/ll_listSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_carouselText"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingEnd="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/list_header_title"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/list_header_subtitle"
                    android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="12dp"
                    tools:listitem="@layout/rv_list_items" />
            </LinearLayout>

            <!--End of List-->


            <!--Filters-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_listSection"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingEnd="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_header_title"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_header_subtitle"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/eda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/interests_tv_style"
                        android:padding="10dp"
                        android:text="@string/filter1"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/samorazvitie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/eda"
                        android:background="@drawable/interests_tv_style"
                        android:padding="10dp"
                        android:text="@string/filter2"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/technology"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/samorazvitie"
                        android:background="@drawable/interests_tv_style"
                        android:padding="10dp"
                        android:text="@string/filter3"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/dom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/eda"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/interests_tv_style"
                        android:padding="10dp"
                        android:text="@string/filter4"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/dosug"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/samorazvitie"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/dom"
                        android:background="@drawable/interests_tv_style"
                        android:padding="10dp"
                        android:text="@string/filter5"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/care"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/samorazvitie"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/dosug"
                        android:background="@drawable/interests_tv_style"
                        android:padding="10dp"
                        android:text="@string/filter6"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/science"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/technology"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/care"
                        android:background="@drawable/interests_tv_style"
                        android:padding="10dp"
                        android:text="@string/filter7"
                        android:textColor="#000000" />
                </RelativeLayout>

            </LinearLayout>
            <!--End of Filters-->
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>