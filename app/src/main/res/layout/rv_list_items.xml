<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_shape"
            android:paddingRight="12dp"/>

        <TextView
            android:id="@+id/titleTextList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon_image"
            android:text="Изменить суточный лимит"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/subTitleTextList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTextList"
            android:layout_toEndOf="@+id/icon_image"
            android:text="На платежи и переводы" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_disclosure"
            android:paddingRight="8dp"/>
    </RelativeLayout>
</LinearLayout>